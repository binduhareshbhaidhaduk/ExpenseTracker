<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Expense Tracker</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="./css/style.css"> <!-- Optional custom styling -->
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Expense Tracker</h2>

        <!-- Button to create a new transaction -->
        <a href="/createForm" class="btn btn-dark mb-3">Add New Transaction</a>

        <!-- Table to display transactions -->
        <table class="table table-striped ">
            <thead>
                <tr>
                    <th>Type</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Category</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% Tracker.forEach(t => { %>
                    <tr>
                        <td><%= t.type %></td>
                        <td><%= t.description %></td>
                        <td><%= t.amount %></td>
                        <td><%= t.category %></td>
                        <td><%= new Date(t.date).toDateString() %></td>
                        <td>
                            <a href="/singleTracker/<%= t._id %>" class="btn btn-outline-warning btn-sm">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                            <a href="/deleteTracker/<%= t._id %>" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure you want to delete this transaction?')">
                                <i class="fas fa-trash-alt"></i> Delete
                            </a>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
        </table>
    </div>

    <!-- Optional JavaScript and Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.3/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
